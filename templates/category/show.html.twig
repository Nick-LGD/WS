{% extends 'base.html.twig' %}

{% block content %}
    <h1>Les 3 dernières séries de la categorie {{ categoryName }} : </h1>
    {% for program in programs %}
        <div>
            <div>
                <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                <p>{{ program.summary }}</p>
            </div>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('category') }}" class="btn btn-success">
        Retour à l'accueil
    </a>
{% endblock %}